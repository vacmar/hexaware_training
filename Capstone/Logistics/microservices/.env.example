# Environment variables for Logistics Microservices
# Copy this file to .env and update values for production

# Database
DATABASE_URL=postgresql://postgres:password@db:5432/logistics_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=logistics_db

# JWT Secret Key (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-in-production

# Redis
REDIS_URL=redis://redis:6379

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth-service:8001
HUB_SERVICE_URL=http://hub-service:8002
SHIPMENT_SERVICE_URL=http://shipment-service:8003
TRACKING_SERVICE_URL=http://tracking-service:8004

# Debug mode
DEBUG=true
